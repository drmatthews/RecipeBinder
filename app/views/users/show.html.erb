<div class="row-fluid">
	<aside class="span2" id="userInfo">
		<h3> 
		  <%= gravatar_for current_user %>
		  <%= current_user.name %> 
		</h3>
		<% if current_user %>
		  <%= render 'users/follow_form' if signed_in? %>
		 <section>
			<%= render 'shared/stats' %>
		</section>
		<% end %>
		<% if current_user %>
		<section id="newRecipeSection">
			<li>
				<%= link_to "New Recipe!", new_recipe_path(current_user), {:id => "newRecipeBtn", :class => "btn btn-primary"} %>
			</li>
		</section>
		<section>
			<li>
				<%= link_to "Shopping List", items_path, {:class => "btn btn-primary", :id => "shoppingList"} %>
			</li>
		</section>
		<% end %>
	</aside>
	<div class="span10">
		<section>
			<h3>My recipes</h3>
			<%= render 'shared/feed' %>
		</section>
		<section>
			<%= link_to "All recipes", recipes_path, :class => "btn btn-primary" %>
		</section>
	</div>
</div>