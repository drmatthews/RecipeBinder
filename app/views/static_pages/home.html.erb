<% if signed_in? %>
    <div class="row">
      <div class="span4">
        <p>
          <%= render 'shared/user_info' %>
        </p>
      </div>
      <div class="span8">
      	<section>
          <h3><%=link_to "Current recipes", user_recipes_path(current_user)%></h3>
            <%= render 'shared/feed' %>
        </section>
        <section>
          <%= render 'shared/stats' %>
        </section>
      </div>
   </div>
<% else %>
  <div class="row">
    <div class="span5">
      <h1>New user?</h1>
      <h1>Welcome to Recipe Binder!</h1>
      <p>
        <%= link_to "Sign up now!", signup_path, {:class => 'btn btn-signup'}%>
      </p>
    </div>
    <div class="span5">
      <%= render 'sessions/new'%>
    </div>
  </div>     
<% end %> 
