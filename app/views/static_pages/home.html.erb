<% if signed_in? %>
    <section class="col-1-4">
      <div class="module">
        <p>
          <%= render 'shared/user_info' %>
        </p>
      </div>
    </section>
    <section class="col-3-4">
      <div class="module module-main">
        <h3><%=link_to "Current recipes", user_recipes_path(current_user)%></h3>
        <%= render 'shared/feed' %>
      </div>
   </section> 
<% else %>
  <div class="center hero-unit">
    <h1>Welcome to Recipe Binder</h1>

    <h2>
      This is the home page for Recipe Binder.
    </h2>

    <%= link_to "Sign up now!", signup_path, 
                                class: "btn btn-large btn-primary" %>
  </div>
<% end %> 
