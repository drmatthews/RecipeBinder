<header class="navbar navbar-fixed-top ">
  <div class="navbar-inner">
      <%= link_to "myCookBook", root_path, :class => "brand", :id => 'logo' %>
      <nav>
        <ul class="nav pull-right">
          <li><%= link_to "Browse recipes", root_path %></li>	
          <% if signed_in? %>
            <li><%= link_to "Users", users_path %></li>
            <li id="fat-menu" class="dropdown">
              <a href="#" class="dropdown-toggle" data-toggle="dropdown">
                <%= gravatar_nav_for current_user %>
				<%= current_user.name %> <b class="caret"></b>
              </a>
              <ul class="dropdown-menu">
                <li><%= link_to "Profile", user_path(current_user) %></li>
                <li><%= link_to "Settings", edit_user_path(current_user) %></li>
                <li class="divider"></li>
                <li>
                  <%= link_to "Sign out", signout_path, method: "delete" %>
                </li>
              </ul>
            </li>
          <% else %>
            <li><%= link_to "Sign in", signin_path %></li>
          <% end %>
        </ul>
        <%= form_tag recipes_path, method: :get, :class => 'navbar-search pull-left' do %>
  			<div id="search-field">
    			<%= text_field_tag :search, params[:search], :class => "input-medium search-query", :placeholder =>"Search" %>
    	    </div>
		<% end %>
      </nav>
  </div>
</header>
