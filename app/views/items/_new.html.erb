<div class="modal-header">
	<button type="button" class="close" data-dismiss="modal" aria-hidden="true">
		&times;
	</button>
	<h2>Create a shopping list</h2>
</div>
<div class="modal-body">
	<div class="row">
		<div class="span6">
			<%= form_tag('/Items', :method => :get, :html => {:id => "listItems"}) do %>
				<p>
					<%= text_field_tag :name %>
					<%= submit_tag "Add", :class => "btn btn-success"%>
				</p>
			<% end %>
		</div>
	</div>
	<div class="row">
		<div class="span6">
			<table id="shopping_list">
				<tr>
					<th></th>
					<th></th>
				</tr>
				<% for item in @items %>
				<tr>
					<td><%= item.name %></td>
					<td><%= link_to "Delete", item_path(item), :class => "btn btn-mini btn-danger", method: :delete%></td>
				</tr>
				<% end %>
			</table>
		</div>
	</div>
</div>
<div class="modal-footer">
  <button class="btn" data-dismiss="modal" aria-hidden="true">Close</button>
</div>