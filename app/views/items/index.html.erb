<% provide(:title, 'Shopping list') %>
<div class="row">
  <div class="span6 offset5">
  	<h2>Create a shopping list</h2>
    <%= form_for Item.new do |f| %>
      <p>
        <%= f.text_field :name %>
        <%= f.submit "Add", :class => "btn btn-success"%>
      </p>
    <% end %>
  </div>
</div>
<div class="row">
  <div class="span6 offset5">
    <table id="shopping_list">
      <tr>
      	<th></th>
      	<th></th>
      </tr>
      <% for item in @items %>
        <tr>
          <td><%= item.name %></td>
          <td><%= link_to "Delete", item_path(item), :class => "btn btn-mini btn-danger", method: :delete%></td>
        </tr>
      <% end %>
    </table>
  </div>
</div>