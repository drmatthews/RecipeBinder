<%= div_for recipe do %>
	<% if recipe.picture.nil?%>
		<%= image_tag('blank.png', size: "200x125") %>
	<% else %>
		<%= image_tag recipe.picture.image_url(:thumb), size: "200x125" %>
	<% end %>
	<h2><%= link_to_unless_current recipe.title, recipe, remote: true %>
		| <%= link_to "new image", new_recipe_picture_path(recipe), :class => 'btn btn-mini btn-success', :id => 'addPicture', remote: true%>
        <script id="template-upload" type="text/x-tmpl">
			<div class="upload">
  				{%=o.name%}
  				<div class="progress"><div class="bar" style="width: 0%;"></div></div>
			</div>
		</script>		
	</h2>
	<div class="description"><%= recipe.description %>
		<% if recipe.tag_list %>
			<p>
				<em>Tags:</em> <%= recipe.tag_list %>
			</p>
		<% end %>
		<em>added by <%= link_to recipe.user.name, recipe.user %></em>
		<p>
			<em><%= link_to "#{recipe.comments.count} Comments", recipe_comments_path(recipe), remote: true %></em>
		</p>
	</div>
<% end %>