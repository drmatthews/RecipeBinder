<div class="modal-header">
  <button type="button" class="close" data-dismiss="modal" aria-hidden="true">&times;</button>
    <h4> Recipe card for <%= @recipe.title%></h4>
</div>
<div class="modal-body">
  <div>
    <h4>Ingredients</h4>
    <%= form_tag addto_items_path(@user), method: :put do %>
      <table id="ingredients">
        <tr>
          <th></th>
          <th></th>
        </tr>
        <% @ingredients.each do |ingredient| %>
          <tr>
            <td><%= check_box_tag "ingredient_ids[]", ingredient.id %></td>
            <td><%= ingredient.content %></td>
          </tr>
        <% end %>
      </table> 
      <%= submit_tag "Add to shopping list"%>   
    <% end%>
  </div>
  <div>
    <h4>Method</h4>
    <ol>
      <% @steps.each do |step| %>
        <li> 
          <%= step.content%>
        </li>
      <%end%>
    </ol>
  </div>
</div>
<div class="modal-footer">
  <button class="btn" data-dismiss="modal" aria-hidden="true">Close</button>
  <% if @user == current_user %>
  	<%= link_to 'Edit', edit_user_recipe_path(@user,@recipe), {:id => "editLink", :class => "btn btn-primary"}%>
  <% end %>
</div>

