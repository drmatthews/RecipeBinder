<%= form_for @recipe, :html => {:class => "updateRecipe"} do |f| %>
  <%= render 'shared/error_messages', object: f.object %>
  <div class="tabbable"> <!-- Only required for left/right tabs -->
    <ul class="nav nav-tabs">
      <li class="active"><a href="#DetailsTab" data-toggle="tab">Details</a></li>
      <li><a href="#IngredientsTab" data-toggle="tab">Ingredients</a></li>
      <li><a href="#MethodTab" data-toggle="tab">Method</a></li>
      <li><a href="#ImagesTab" data-toggle="tab">Images</a></li>
    </ul>
    <div class="tab-content">
      <div class="tab-pane active" id="DetailsTab">
        <div class="row">
          <div class="span6 offset1">
            <h4> Details </h4>
            <p>
              <%= f.label :title %>
              <%= f.text_field :title %>
      		
              <%= f.label :chef %>
              <%= f.text_field :chef %>

              <%= f.label :category %>
              <%= f.text_field :category %>
            </p>
          </div>
        </div>
      </div>
      <div class="tab-pane" id="IngredientsTab">
        <h4> Ingredients </h4>         
        <p>
			<%= f.fields_for :ingredients do |ingredient_field| %>
				<%= render 'ingredient_fields', :f => ingredient_field%>
			<% end%>
			<%= link_to_add_fields "Add ingredient", f, :ingredients%>
        </p>
      </div>
      <div class="tab-pane" id="MethodTab">
        <h4> Method </h4>
        <p>
			<%= f.fields_for :steps do |step_field| %>
				<%= render 'step_fields', :f => step_field%>
			<% end %>
			<%= link_to_add_fields "Add step", f, :steps%>
        </p>
      </div>
      <div class="tab-pane" id="ImagesTab">
        <h4> Image </h4>        
        <p>
          <%= f.file_field :image %>
        </p>
        <p>
          <%= f.label :remote_image_url, "or image URL" %><br />
          <%= f.text_field :remote_image_url %>
        </p>
      </div>	
    </div>
  </div>
  <div id="createRecipe"><%= f.submit "Create recipe!", class: "btn btn-large btn-success" %></div>
<% end %>
