<% provide(:title, @user.name) %>
  <div class="row-fluid">
    <aside class="span2">
      <h3>
        <%= gravatar_for @user %>
        <%= @user.name %>
      </h3>
      <section>
        <%= link_to "New Recipe!", new_user_recipe_path(@user), class: "btn btn-primary" %>
      </section>
    </aside>
    <div class="span8">
      <% if @user.recipes.any? %>
        <h3><%= @user.recipes.count %> Recipes</h3>
        <%= render "recipes/recipes" %>
        <%= will_paginate @recipes %>
      <% end %>
  </div>
</div>
